{
  "version": "1.0",
  "servers": {
    "github": {
      "name": "GitHub MCP Server",
      "type": "github",
      "repository": "theaioniqlabs/Aioniq",
      "endpoint": {
        "url": "https://api.githubcopilot.com/mcp/",
        "type": "github-copilot"
      },
      "authentication": {
        "method": "bearer",
        "tokenSource": "config",
        "tokenEnvVar": "GITHUB_TOKEN"
      },
      "capabilities": {
        "read": {
          "enabled": true,
          "methods": [
            "repo.read",
            "file.read",
            "branch.list",
            "commit.read"
          ]
        },
        "write": {
          "enabled": true,
          "requireApproval": true,
          "methods": [
            "file.write",
            "pr.create",
            "issue.create",
            "commit.create"
          ]
        }
      },
      "metadata": {
        "description": "GitHub MCP server for AiONIQ repository integration via GitHub Copilot API",
        "contact": "devops@aioniq.example.com",
        "docs": "docs/mcp/github-setup.md"
      }
    }
  },
  "cursorConfig": {
    "mcpServers": {
      "github": {
        "url": "https://api.githubcopilot.com/mcp/",
        "headers": {
          "Authorization": "Bearer YOUR_GITHUB_TOKEN_HERE"
        }
      }
    }
  }
}

